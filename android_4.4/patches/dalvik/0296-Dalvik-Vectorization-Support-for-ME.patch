+    {
+        // Otherwise, insert a new entry for this vr
+        RegisterAssociation newAssociation;
+        newAssociation.vectorized = 0;
+        newAssociation.input = true;
+        newAssociation.output = false;
+        info->registers[vr] = newAssociation;
+    }
