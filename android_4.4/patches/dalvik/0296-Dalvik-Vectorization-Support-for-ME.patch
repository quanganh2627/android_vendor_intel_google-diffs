+
+    GrowableListIterator iterator;
+    dvmGrowableListIteratorInit(&cUnit->blockList, &iterator);
+
+    while (true)
+    {
+        BasicBlock *bbscan = (BasicBlock *) dvmGrowableListIteratorNext(&iterator);
